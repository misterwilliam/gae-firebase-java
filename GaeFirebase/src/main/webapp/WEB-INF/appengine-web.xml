<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    <application>${app.id}</application>
    <version>${app.version}</version>
    <threadsafe>true</threadsafe>
    
    <manual-scaling>
      <instances>1</instances>
    </manual-scaling>

    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>

        <property name="GaeFirebaseProxy.dev.src.urls"
                  value="https://fb-channel.firebaseio.com/clients"/>
        <property name="GaeFirebaseProxy.dev.dest.urls"
                  value="http://localhost:9000/api/_presence/gae"/>
                  
        <property name="GaeFirebaseProxy.prod.src.urls"
                  value="https://fb-channel.firebaseio.com/clients"/>
        <property name="GaeFirebaseProxy.prod.dest.urls"
                  value="http://gae-firebase-c4d3c.appspot.com/api/_presence/gae"/>
    </system-properties>
    <resource-files>
      <include path="/**.properties" />
      <include path="application_default_credentials.json" />
    </resource-files>
</appengine-web-app>
